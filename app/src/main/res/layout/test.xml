<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/app_entry"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/rounded_corner_variant_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/app_icon"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/sample"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintStart_toStartOf="@id/app_entry"
        app:layout_constraintTop_toTopOf="@id/app_entry"
        app:layout_constraintBottom_toBottomOf="@id/app_entry" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/citrus"
        android:text="Instagram"
        android:textColor="@color/opposite"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/app_time"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toTopOf="@id/app_icon" />

    <TextView
        android:id="@+id/app_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/opposite"
        android:text="1h 30m 26s"
        android:fontFamily="@font/citrus"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@id/app_range"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <TextView
        android:id="@+id/app_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/opposite"
        android:text="12:00pm - 1:30pm"
        android:fontFamily="@font/citrus"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toBottomOf="@id/app_time"
        app:layout_constraintBottom_toBottomOf="@id/app_entry"/>

</androidx.constraintlayout.widget.ConstraintLayout>