<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_variant_2"
    android:padding="15dp"
    android:id="@+id/app_entry"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/sample"

        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="24sp"
        android:gravity="start|center_vertical"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/citrus"
        android:textColor="@color/opposite"
        app:layout_constraintStart_toEndOf="@id/app_icon"
        app:layout_constraintTop_toTopOf="@id/app_icon"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_spent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/citrus"
        android:textColor="@color/opposite"
        android:text="1h 4m 10s"
        app:layout_constraintStart_toStartOf="@id/app_name"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_recorded_range"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="@font/citrus"
        android:textColor="@color/opposite"
        android:text="1:00pm - 2:00pm"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/time_spent"
        app:layout_constraintTop_toBottomOf="@id/time_spent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
